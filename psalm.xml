<?xml version="1.0"?>
<psalm
    errorLevel="1"
    useDocblockPropertyTypes="true"
    usePhpDocMethodsWithoutMagicCall="true"
    strictBinaryOperands="true"
    ignoreInternalFunctionFalseReturn="false"
    ignoreInternalFunctionNullReturn="false"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
    hideExternalErrors="true"
    allowNamedArgumentCalls="false"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <file name="app/vip-config/__automated-test-checker.php"/>
        <file name="app/vip-config/__sunrise-config-loader.php"/>
        <file name="app/vip-config/__helpers.php"/>
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <stubs>
        <file name="vendor/inpsyde/wp-stubs-versions/latest.php" />
    </stubs>

    <issueHandlers>
        <MixedAssignment errorLevel="suppress" />
        <UnresolvableInclude errorLevel="suppress" />
        <RedundantCastGivenDocblockType errorLevel="suppress" />
    </issueHandlers>
</psalm>
